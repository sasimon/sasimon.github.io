	max-width: 1400px;
}

/* Begin HTML 244 */
/* General Navigation List Style */

nav a {
	text-decoration: none;
}

/* Horizontal Navigation List */

/* Begin HTML 255 (margin rule) */

nav.horizontalNAV {
	margin-left: 33%;
	width: 66%
}

/* End HTML 255 */

nav.horizontalNAV li {
	font-size: 87%;
	float: left;
	text-align: center;
	width: 20%;
	padding: 15px 0px; /* padding style rule (HTML 256) */
}

nav.horizontalNAV li a {
	color: rgb(255,255,99);
}

nav.horizontalNAV li a:hover {
	color: white;
}

/* End HTML 244 */

/* Begin HTML 247 */

/* President's Message */

#president {
	background-color: rgb(105, 96, 87);
	background-color: rgba(255, 255, 255, 0.3);
	clear: left;
	float: left;
	margin-left: 33%; /* another margin rule (HTML 255) */
	width: 40%;
/* Begin HTML 258 (setting the background image) */
	background-image: url(atwood.png);
	background-position: bottom right;
	background-repeat: no-repeat;
	
	-o-background-size: 40%; /* specific to Presto-based browsers (e.g., Opera) */
	-moz-background-size: 40%; /* specific to Gecko-based browsers (e.g., Firefox) */
	-webkit-background-size: 40%; /* specific to Webkit-based browsers (e.g., Chrome, Safari) */
	background-size: 40%; /* fallback rule if browsers do not match any of the above */
/* End HTML 258 */
/* Begin HTML 269 (setting radius of rounded borders */
	-moz-border-radius: 30px;
	-webkit-border-radius: 30px;
	border-radius: 30px;
/* End HTML 269 */
}

/* End HTML 247 */

